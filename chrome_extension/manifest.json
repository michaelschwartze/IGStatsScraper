{
  "manifest_version": 3,
  "name": "IG Reel Insight Scraper",
  "version": "1.0",
  "description": "A simple tool for copying your Instagram Reels insights to a table so it will paste easily into a spreadsheet" ,
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "permissions": [
    "scripting", 
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/reel/*",
        "*://*.instagram.com/p/*"
      ],
      "js": [
        "content.js",
        "datatable.js",
        "dataexport.js",
        "background.js",
        "profileLoader.js"
      ]
    }
  ],
  "icons": {
    "128": "icon128.png"
  }
}
